{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1>Add Diagnosis</h1>

    <p>Add the diagnosis here:</p>

    <form action="/diagnosis" method="post" class="jumbotron">
        <div class="form-group">
            <label for="name">Animal Type</label>
            <input id="name" name="name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="Sex">Sex</label>
            <select mdb-select md-form colorful-select dropdown-secondary id='sex' name='sex' type='text'>
                <option class="text-grey" value="" disabled selected>Select Sex</option>
                <option value="Diagnosis.female">Female</option>
                <option value="Diagnosis.male">Male</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Age">Age</label>
            <input type="number" name="age" id="age" placeholder="enter age" required>
        </div>
        <div class="form-group">
            <label for="breed">Breed</label>
            <input value="" id="breed" name="breed" type="text" placeholder="enter the breed" required>
        </div>
        <div class="form-group">
            <label for="herd number">Herd Number</label>
            <input value="" id="herd number" type="number" name="herd number" placeholder="Enter herd number" required>
        </div>
        <div class="form-group">
            <label for="number sick">Number Sick</label>
            <input value="" id="number sick" type="number" name="number sick" placeholder="Enter number sick" required>
        </div>
        <div class="form-group">
            <label for="number dead">Number dead</label>
            <input value="" id="number dead" type="number" name="number dead" placeholder="Enter number dead" required>
        </div>
        <div class="form-group">
            <label for="clinical signs">Clinical Signs</label>
            <textarea value="" id="clinical signs" type="text" rows="10" cols="50" name="clinical signs" placeholder="Enter herd number" required></textarea>
        </div>
        <div class="form-group">
            <label for="clinical signs">Add video</label>
            <video width="320" height="240" autoplay>
                <source src="movie.mp4" type="video/mp4">
                <source src="movie.ogg" type="video/ogg">
                Your browser does not support the video tag.
            </video>
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input value="" id="breed" name="breed" type="text" placeholder="enter location" required>
        </div>
        <h1>My First Google Map</h1>

        <div id="googleMap" style="width:100%;height:400px;"></div>

        <script>
            function myMap() {
                var mapProp= {
                center:new google.maps.LatLng(51.508742,-0.120850),
                 zoom:5,
                    };
            var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);
            }
         </script>

        <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY&callback=myMap"></script>

        <button type="submit" class="btn btn-outline-success">Add Diagnosis</button>
    </form>
{{/partial}}
{{> layout.hbs}}