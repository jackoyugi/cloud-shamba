{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1>Add a Farmer</h1>

    <p>Add a Farmer here:</p>

    <form action="/farmer" method="post" class="jumbotron">
        <div class="form-group">
            <label for="name">Farmer Name</label>
            <input id="name" name="name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="badge">Contact</label>
            <input id="badge" name="badge" type="number" class="form-control">
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input value="" id="breed" name="breed" type="text" placeholder="enter location" required>
        </div>
        <h1>My First Google Map</h1>

        <div id="googleMap" style="width:100%;height:400px;"></div>

        <script>
            function myMap() {
                var mapProp= {
                center:new google.maps.LatLng(51.508742,-0.120850),
                 zoom:5,
                    };
            var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);
            }
         </script>

        <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY&callback=myMap"></script>

        <button type="submit" class="btn btn-outline-success">Add Farmer</button>
    </form>
{{/partial}}
{{> layout.hbs}}