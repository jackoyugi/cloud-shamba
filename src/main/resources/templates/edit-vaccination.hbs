    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1>Add Vaccination</h1>

    <p>Add the Vaccination here:</p>

    <form action="/vaccination" method="post" class="jumbotron">
        <div class="form-group">
            <label for="name">Animal Type</label>
            <input id="name" name="name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="vaccination_programme">Vaccination Programme</label>
            <select mdb-select md-form colorful-select dropdown-secondary id='sex' name='sex' type='text'>
                <option class="text-grey" value="" disabled selected>Vaccination Programme</option>
                <option value="Vaccination.poultry"> Indigenous poultry</option>
                <option value="Vaccination.poultry">Laying poultry</option>
                <option value="Vaccination.poultry">Broiler poultry</option>
            </select>
        </div>
        <div class="form-group">
            <label for="flock_number">Flock Number</label>
            <input value="" id="flock_number" type="number" name="flock_number" placeholder="Enter herd number" required>
        </div>

        <div class="form-group">
            <label for="location">Location</label>
            <input value="" id="breed" name="breed" type="text" placeholder="enter location" required>
        </div>
        <h1>My First Google Map</h1>

        <div id="googleMap" style="width:100%;height:400px;"></div>

        <script>
            function myMap() {
                var mapProp= {
                center:new google.maps.LatLng(51.508742,-0.120850),
                 zoom:5,
                    };
            var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);
            }
         </script>

        <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY&callback=myMap"></script>

        <button type="submit" class="btn btn-outline-success">Add Vaccination</button>
    </form>
{{/partial}}
{{> layout.hbs}}